/* components/calendar/calendar.wxss */

.y-l{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #f2f2f2;
  font-size: 30rpx;
}
.d-table{
  width: 700rpx;
  margin: 0 auto;
  border-top:1rpx solid #D0D0D0;
  border-right: 1rpx solid #D0D0D0;
}
.m-l{
  display: flex; 
}
.m-c{
  position: relative;
  flex-grow:1;  
  height: 100rpx;    
  border-bottom: 1rpx solid #D0D0D0;
  box-sizing: border-box;
  border-left: 1rpx solid #D0D0D0;
}
.swp{
  height: 100%;
}
.m-d{
  font-size: 26rpx;
  position: absolute;
  top:10rpx;
  left: 10rpx;
  color: #666;
}
.w-l{
  padding:0 25rpx;
  font-size: 24rpx;
  display: flex;
}
.w-l text{
  flex-grow:1;
  text-align: center;
  line-height: 60rpx;
}
.per,.next{
  background: #614242;  display: flex;
  }

.w-l text{
  flex-grow:1;
  text-align: center;
  line-height: 60rpx;
}
.curr{
  background: #8199E7;  
}
.curr .m-d{
  color:#fff;
  font-size: 32rpx;
  font-weight: bold;
}
.per,.next{
  background:#E3E3E3;
}
.per .m-d,.next .m-d{
  color:#fff;
  font-size: 26rpx;
}
