  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #f2f2f2;
  font-size: 30rpx;
}
.m-l{
  display: flex
}
.m-c{
  flex-grow:1;
  text-align: center;
  height: 100rpx;  
  position: relative;
  border-left: 1rpx solid #f2f2f2; 
  border-bottom: 1rpx solid #f2f2f2;
